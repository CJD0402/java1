package basicPractice;

class ExchangeRateInformation {
	
	String monetaryUnit;
	double exchangeRate;
	
	ExchangeRateInformation() {}
	
	ExchangeRateInformation(String monetaryUnit, double exchangeRate) {
		this.monetaryUnit = monetaryUnit;
		this.exchangeRate = exchangeRate;
	}
	
}

public class CurrencyExchange03 {
	
	static ExchangeRateInformation[] exchangeRateArray; 
	
	public static void main(String[] args) {
		
		exchangeRateArray = new ExchangeRateInformation[] { 
				new ExchangeRateInformation(),
				new ExchangeRateInformation(),
				new ExchangeRateInformation()
		};
		
		exchangeRateArray[0].monetaryUnit = "달러";
		exchangeRateArray[0].exchangeRate = 1307.5;

		exchangeRateArray[1].monetaryUnit = "엔";
		exchangeRateArray[1].exchangeRate = 9.32;

		exchangeRateArray[2].monetaryUnit = "위안";
		exchangeRateArray[2].exchangeRate = 183.78;
	}
	
}
